{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "outDir": "lib/",
    "lib": ["es2020", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
